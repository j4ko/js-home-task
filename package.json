  },
  "keywords": [
    "testcafe",
    "automation",
    "testing",
    "qa",
    "tv-os",
    "e2e"
  ],
  "author": "QA Engineer",
  "license": "MIT",
  "devDependencies": {
    "testcafe": "^3.6.2",
    "testcafe-reporter-html": "^1.4.6"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
