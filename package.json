{
  "name": "tv-os-automation-tests",
  "version": "1.0.0",
  "description": "Automated testing suite for TV OS simulation using TestCafe",
  "main": "index.js",
  "scripts": {
    "test:all": "testcafe chrome tests/ --experimental-multiple-windows --reporter spec,html:reports/test-results.html",
